<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/space"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/logonameimg"
        android:layout_width="438.10dp"
        android:layout_height="133.90dp"
        android:gravity="center"
        android:text="𝕾𝖒𝖆𝖗𝖙𝖞 𝕿𝖍𝖊 𝕮𝖍𝖆𝖙𝖇𝖔𝖙"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logoimg"
        android:layout_width="334dp"
        android:layout_height="341dp"
        android:layout_marginTop="264dp"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/chatbot" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logoimg2"
        android:layout_width="191dp"
        android:layout_height="159dp"
        android:layout_marginTop="136dp"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/livechatbot" />

    <TextView
        android:id="@+id/owntwo"
        android:layout_width="325dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="𝕄𝕒𝕕𝕖 𝕓𝕪 𝓡𝓾𝓹𝓪𝓶 𝓜𝓾𝓴𝓱𝓮𝓻𝓳𝓮𝓮"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />


</androidx.constraintlayout.widget.ConstraintLayout>